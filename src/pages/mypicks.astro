---
import Layout from '../layouts/ShopLayout.astro';
import LoopMoving from '../components/LoopMoving.astro';
import Icon from '../components/Icon.astro';
import ShopCarousel from '../components/ShopCarousel.astro';
---

<Layout title="">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Ballet:opsz@16..72&family=League+Script&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=League+Script+Two&display=swap" rel="stylesheet" />
  </head>

  <!-- White full-width but thin container behind moving text -->
  <div class="white-bg-container">
    <div class="moving-text-wrapper">
      <LoopMoving text="- My Picks" fontSize="9rem" />
    </div>
  </div>

  <!-- Left-aligned content text below -->
  <div class="content-text">
    <h2>What i'm eyeing. . .</h2>
  </div>

  <ShopCarousel />

  <style>
    /* White background behind the moving text - thinner height */
    .white-bg-container {
      width: 100vw;           /* full viewport width */
      height: 140px;          /* much thinner */
      background-color: white;
      margin-left: calc(50% - 50vw);
      margin-right: calc(50% - 50vw);
      box-sizing: border-box;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      display: flex;
      align-items: center;    /* vertically center the moving text inside */
      justify-content: center;
      overflow: visible;      /* allow moving text to overflow if needed */
      padding: 0 1rem;
      position: relative;
      z-index: 1;
    }

    .moving-text-wrapper {
      position: relative;
      margin-top: 2.5rem;
      max-width: 1300px;
      width: 120%;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: visible; /* so large text can overflow container */
    }

    /* Left align the content text and constrain max width */
    .content-text {
      max-width: 1400px;
      margin: 4rem  1rem auto; /* very tight vertical spacing */
      color: #ff66cc;
      text-align: left;
      padding: 0 1rem;
      font-family: 'Graduate', serif;
    }

    .content-text h2 {
      margin: 0;
      font-size: 1.5rem;
      line-height: 1.1;
    }
  </style>
</Layout>
