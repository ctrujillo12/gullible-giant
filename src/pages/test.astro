---
import Layout from "../layouts/ShopLayout.astro";
import LoopMoving from '../components/LoopMoving.astro';
import ShopCarousel from '../components/ShopCarousel.astro';

import { products } from '../content/products.js';
import { productsAccessories } from '../content/accessories.js';
import { productsFall } from '../content/fall-products.js';
import { productsEdgy } from '../content/edgy.js';
---

<Layout title="Night Scroll Demo">
  <style>
    /* Smooth transition for colors */
    body {
      background-color: rgb(195, 245, 95)a;
      color: #111;
      transition: background-color 1s ease, color 1s ease;
    }

    body.night-mode {
      background-color: #111;
      color: rgb(195, 245, 95);
    }

    section {
      min-height: 80vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-size: 1rem;
      transition: background-color 1s ease, color 1s ease;
      width: 100%;
    }

    /* Light section */
    .day-section {
      background-color: rgb(195, 245, 95);
    }

    /* Dark section */
    body.night-mode .night-section {
      background-color: #111;
      color: black;
    }

    /* Day My Picks banner styles (kept centered) */
    .white-bg-container {
      width: 100vw;
      height: 170px;
      background-color: #ff66cccf;
      display: flex;
      align-items: center;
      justify-content: center; /* still centered */
      overflow: visible;
      padding: 0 1rem;
      position: relative;
      z-index: 1;
    }

    .moving-text-wrapper {
      position: relative;
      margin-top: 2.5rem;
      max-width: 1300px;
      width: 120%;
      display: flex;
      justify-content: center; /* still centered */
      align-items: center;
      overflow: visible;
    }

    /* Left-aligned “What I'm Eyeing” section */
    .content-text {
      max-width: 1400px;
      margin: 4rem 1rem 0;
      color: #ff66cc;
      text-align: left; /* left align heading */
      padding: 0 1rem;
      font-family: 'Graduate', serif;
    }

    .content-text h2 {
      margin: 0;
      font-size: 1.5rem;
      line-height: 1.1;
    }

    /* Left-aligned tabs */
    .tab-buttons {
      display: flex;
      justify-content: flex-start; /* left align buttons */
      gap: 1rem;
      margin: 1rem 1rem 2rem; 
      max-width: 1000px;
      padding: 0 1rem;
    }

    .tab-buttons button {
      background: white;
      border: 1px solid #ff66cc;
      color: #ff66cc;
      font-family: 'Graduate', serif;
      padding: 0.5rem 1rem;
      border-radius: 20px;
      cursor: pointer;
      transition: all 0.2s ease-in-out;
    }

    .tab-buttons button.active,
    .tab-buttons button[aria-selected='true'] {
      background-color: #ff66cc;
      color: white;
    }

    .carousel-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 1rem 4rem;
    }

    .carousel-tab {
      display: none;
    }

    .carousel-tab.active-tab {
      display: block;
    }

    /* Night section banner (kept centered) */
    .night-banner {
      width: 100vw;
      height: 170px;
      background-color: #111;
      display: flex;
      align-items: center;
      justify-content: center; /* still centered */
      overflow: visible;
      padding: 0 1rem;
      position: relative;
      z-index: 1;
    }

    .night-content-text {
      max-width: 1400px;
      margin: 2rem 1rem;
      color: rgb(158, 31, 222);
      text-align: left; /* left align heading */
      padding: 0 1rem;
      font-family: 'Graduate', serif;
    }

    .night-content-text h2 {
      margin: 0;
      color: rgb(158, 31, 222);
      font-size: 1.5rem;
      line-height: 1.1;
    }

    .night-section .night-carousel-title {
      font-size: 2rem;
      margin-bottom: 1rem;
      color: rgb(195, 245, 95);
    }

    /* Spacer above night banner – 3x bigger */
    .night-spacer {
      width: 100%;
      height: 350px;
      background-color: rgb(195, 245, 95);
      transition: background-color 1s ease;
    }

    body.night-mode .night-spacer {
      background-color: #111;
    }

  </style>

  <!-- Day Section -->
  <section class="day-section">
    <div class="white-bg-container">
      <div class="moving-text-wrapper">
        <LoopMoving text="- My Picks" fontSize="9rem" color="#111" />
      </div>
    </div>

    <div class="content-text">
      <h2>What I'm Eyeing. . .</h2>
    </div>

    <div class="tab-buttons" role="tablist" aria-label="Shop Categories">
      <button type="button" role="tab" aria-selected="true" aria-controls="carousel-clothes" id="tab-clothes" class="active">
        Summer!
      </button>
      <button type="button" role="tab" aria-selected="false" aria-controls="carousel-accessories" id="tab-accessories">
        Accessories!
      </button>
      <button type="button" role="tab" aria-selected="false" aria-controls="carousel-fall" id="tab-fall">
        Fall!
      </button>
    </div>

    <div class="carousel-container">
      <section id="carousel-clothes" role="tabpanel" aria-labelledby="tab-clothes" class="carousel-tab active-tab">
        <ShopCarousel products={products} nameFontSize="1rem" priceFontSize="1rem" />
      </section>
      <section id="carousel-accessories" role="tabpanel" aria-labelledby="tab-accessories" class="carousel-tab">
        <ShopCarousel products={productsAccessories} nameFontSize="1rem" priceFontSize="1rem" />
      </section>
      <section id="carousel-fall" role="tabpanel" aria-labelledby="tab-fall" class="carousel-tab">
        <ShopCarousel products={productsFall} nameFontSize="1rem" priceFontSize="1rem" />
      </section>
    </div>
  </section>

  <!-- Night Section -->
  <section class="night-section">
    <div class="night-spacer"></div>

    <div class="night-banner">
      <div class="moving-text-wrapper">
        <LoopMoving text="- More++" fontSize="8rem" color="#fff200" />
      </div>
    </div>

    <!-- <div class="night-content-text">
      <h2>What I'm Eyeing. . .</h2>
    </div> -->

    <div class="carousel-container">
      <ShopCarousel products={productsEdgy} nameFontSize="1rem" priceFontSize="1rem" />
    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const tabs = document.querySelectorAll('.tab-buttons button');
      const panels = document.querySelectorAll('.carousel-tab');

      tabs.forEach((tab) => {
        tab.addEventListener('click', (e) => {
          e.preventDefault();
          const targetId = tab.getAttribute('aria-controls');

          tabs.forEach((t) => {
            t.classList.remove('active');
            t.setAttribute('aria-selected', 'false');
          });

          panels.forEach((panel) => panel.classList.remove('active-tab'));

          tab.classList.add('active');
          tab.setAttribute('aria-selected', 'true');
          document.getElementById(targetId).classList.add('active-tab');
        });
      });
    });

    window.addEventListener("scroll", () => {
      const triggerPoint = document.body.scrollHeight / 3;
      if (window.scrollY > triggerPoint) {
        document.body.classList.add("night-mode");
      } else {
        document.body.classList.remove("night-mode");
      }
    });
  </script>
</Layout>
