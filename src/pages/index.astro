  <script>
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      },
      {
        threshold: 0.1,
      }
    );

    document.querySelectorAll('.content-section').forEach((section) => {
      observer.observe(section);
    });
  </script>
</Layout>

<style>
  .hero-images {
    position: relative;
    height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-img-container {
    display: flex;
    width: 100%;
    height: 100%;
  }

  .hero-img-container img {
    width: 50%;
    height: 100%;
    object-fit: cover;
  }

  .overlay-text {
    position: absolute;
    z-index: 2;
    color: #ff66cc;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  /* Optional dark overlay for visibility */
  /* .hero-img-container::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 1;
  } */


  .content-section {
    max-width: 900px;
    margin: 4rem auto;
    display: flex;
    align-items: center;
    gap: 2rem;
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 1s ease-out, transform 1s ease-out;
  }

  .content-section.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Odd sections: text left, image right */
  .content-section:nth-of-type(odd) {
    flex-direction: row;
  }

  /* Even sections: image left, text right */
  .content-section:nth-of-type(even) {
    flex-direction: row-reverse;
  }

  .content-text {
    flex: 1;
    color:#ff66cc;
  }

  .content-text h2 {
    margin-bottom: 1rem;
    font-family: "Graduate", serif;
    color: #ff66cc; /* Optional if you want to emphasize it */
  }


  .content-text p {
    font-size: 1.1rem;
    line-height: 1.5;
    color:#ff66cc;
  }

  .content-image {
    flex: 1;
  }

  .content-image img {
    width: 100%;
    border-radius: 8px;
  }

  /* Responsive: stack vertically on small screens */
  @media (max-width: 768px) {
    .content-section {
      flex-direction: column !important;
      text-align: center;
    }

    .content-text, .content-image {
      width: 100%;
    }
  }

  .link-button {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background-color: #111;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    transition: background-color 0.3s;
  }

  .link-button:hover {
    background-color: #333;
  }
</style>
