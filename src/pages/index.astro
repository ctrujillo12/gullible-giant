---
import Layout from '../layouts/ShopLayout.astro';
import LoopMoving from '../components/LoopMoving.astro';
---

<Layout title="Home">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Ballet:opsz@16..72&family=League+Script&family=Graduate&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=League+Script+Two&display=swap" rel="stylesheet" />
  </head>

  <div class="hero-images">
    <div class="hero-img-container">
      <img src="/images/masai.jpg" alt="Banner 4" />
      <img src="/images/female_manipulator.png" alt="Banner 1" />
      <img src="/images/kurt_jonny.jpg" alt="Banner 1" />
      <img src="/images/fp_dress.jpg" alt="Banner 5" />
      <img src="/images/fitted.jpg" alt="Banner 5" />
      <img src="/images/minecraft_y.jpg" alt="Banner 2" />

      <div class="overlay-text">
        <h2 class="custom-hero-text">Cheyenne++</h2>
      </div>
    </div>
  </div>

  <div class="content-text"></div>

  <div class="content-section">
    <div class="content-text">
      <h2>Currently Listening:</h2>
      <p>A Very good mix of things</p>
      <a href="https://open.spotify.com/playlist/6QlKyBsUbqqEptu4lgE789" class="link-button" target="_blank">Open on Spotify</a>
    </div>
    <div class="content-image">
      <iframe data-testid="embed-iframe" style="border-radius:12px" src="https://open.spotify.com/embed/playlist/6QlKyBsUbqqEptu4lgE789?utm_source=generator&theme=0" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
    </div>
  </div>

  <div class="content-section">
    <div class="content-text">
      <h2>Currently Shopping: </h2>
      <p>Recent secondhand finds I love!!!</p>
      <a href="/mypicks" class="link-button">See More</a>
    </div>
    <div class="content-image shadow-bg">
      <img src="/images/cover2.png" alt="Secondhand Finds" />
    </div>
  </div>

  <script>
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      },
      {
        threshold: 0.1,
      }
    );

    document.querySelectorAll('.content-section').forEach((section) => {
      observer.observe(section);
    });
  </script>
</Layout>

<style>
  .custom-hero-text {
    font-family: "Ballet", cursive;
    font-size: 13rem;
    font-style: bold;
    color: #2eddddff;
    text-align: right;
    z-index: 4;
    position: absolute;
    top: 30%;
    left: 60%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    font-variation-settings: 'opsz' 16; 
  }

  .content-image.shadow-bg {
    background-color: rgba(0, 0, 0, 0.826); 
    display: inline-block; 
    padding: 10px; 
    border-radius: 8px; 
  }

  .content-image.shadow-bg img {
    display: block;
    max-width: 100%;
    height: auto;
    border-radius: 8px; 
  }
  
  .hero-images {
    position: relative;
    height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: #ff66cc;
  }

  .hero-img-container {
    display: grid;
    grid-template-columns: repeat(6, 1fr); 
    grid-auto-rows: 1fr;
    gap: 6px;
    height: 90%;
    width: auto;
    aspect-ratio: 6 / 1; 
    max-width: 90vw;
    align-items: center;
    justify-content: center;
    overflow: visible;
  }

  .hero-img-container img {
    width: 100%;
    height: 90%;
    object-fit: cover;
    display: block;
  }
  
  .hero-img-container img:nth-child(1) { grid-column: span 1; grid-row: span 1; }
  .hero-img-container img:nth-child(2) { grid-column: span 0.5; grid-row: span 1; }
  .hero-img-container img:nth-child(3) { grid-column: span 1; grid-row: span 1; }
  .hero-img-container img:nth-child(4) { grid-column: span 0.5; grid-row: span 0.5; }
  .hero-img-container img:nth-child(5) { grid-column: span 0.5; grid-row: span 0.5; }
  .hero-img-container img:nth-child(6) { grid-column: span 0.5; grid-row: span 0.5; }

  .overlay-text {
    position: absolute;
    z-index: 2;
    color: #ff66cc;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .content-section {
    max-width: 900px;
    margin: 4rem auto;
    display: flex;
    align-items: center;
    gap: 2rem;
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 1s ease-out, transform 1s ease-out;
  }

  .content-section.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .content-section:nth-of-type(odd) {
    flex-direction: row;
  }

  .content-section:nth-of-type(even) {
    flex-direction: row-reverse;
  }

  .content-text {
    flex: 1;
    color:#ff66cc;
  }

  .content-text h2 {
    margin-bottom: 0.5rem;
    font-family: "Graduate", serif;
    color: #ff66cc; 
  }

  .content-text p {
    font-size: 3.5rem;
    line-height: 0.8;
    font-family: "League Script Two", sans-serif;
    color:#ffffff;
  }

  .content-image {
    flex: 1;
  }

  .content-image img {
    width: 100%;
    border-radius: 8px;
  }

  @media (max-width: 768px) {
    .content-section {
      flex-direction: column !important;
      text-align: center;
    }

    .content-text, .content-image {
      width: 100%;
    }

    /* Mobile fixes for hero text */
    .custom-hero-text {
      font-family: "Ballet", cursive;
      font-weight: 700; /* bold */
      font-size: 6.2rem;
      left: 57%;
      top: 50%;
      text-shadow: none;
      transform: translate(-50%, -50%);
      font-variation-settings: 'opsz' 16;
      text-align: center;
    }

    /* Show only last 3 images on mobile */
    .hero-img-container img:nth-child(-n+3) {
      display: none;
    }

    /* Horizontal layout for the remaining 3 images */
    .hero-img-container {
      grid-template-columns: repeat(3, 1fr);
      aspect-ratio: auto;
      justify-items: center;
      gap: 4px;
    }

    /* Mobile pink background adjustments */
    .hero-images {
      height: 50vh; /* smaller height for mobile */
      padding: 0 1rem; /* horizontal padding */
      border-radius: 3px; /* slightly rounded corners */
      background-color: #ff66cc; /* keep pink */
      overflow: hidden;
    }
  }

  .link-button {
    display: inline-block;
    margin-top: 1rem;
    font-size: 1.5rem;
    padding: 0.5rem 1rem;
    background-color: #111;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    transition: background-color 0.3s;
  }

  .link-button:hover {
    background-color: #333;
  }
</style>
