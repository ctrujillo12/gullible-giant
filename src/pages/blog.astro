---
import { getCollection } from 'astro:content';
import Layout from '../layouts/ShopLayout.astro';
import LoopMoving from '../components/LoopMoving.astro';

// get posts
const posts = await getCollection('posts');

// sort newest first
posts.sort((a, b) => new Date(b.data.date) - new Date(a.data.date));
---

<Layout>
  <!-- LoopMoving at top -->
  <h1 class="pink-text">My blog ...</h1>

  <!-- Posts Grid -->
  <section class="grid">
    {posts.map((post) => (
      <div class="card">
        <!-- only the image is clickable -->
        <a href={`/posts/${post.slug}/`} class="image-link">
          <img src={post.data.coverImage} alt={post.data.title} />
        </a>

        <!-- text section below -->
        <div class="card-content">
          <h2>{post.data.title}</h2>
          <p class="date"><em>{post.data.date}</em></p>
          {post.data.description && <p class="description">{post.data.description}</p>}
        </div>
      </div>
    ))}
  </section>
</Layout>

<style>
  .white-bg-container {
    width: 100vw;
    height: 150px;
    background-color: #ff66cccf;
    display: flex;
    align-items: center;
    justify-content: center; /* center horizontally */
    overflow: visible;
    padding: 0 1rem;
    margin-bottom: 2rem;
  }

  .moving-text-wrapper {
    position: relative;
    max-width: 1300px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .pink-text {
    color: #ff66cc;
    font-size: 8rem;
    text-align: left;
    margin-bottom: 1rem;
    padding: 0 2rem;
    /* text-shadow: 0 0 5px #fff, 
               0 0 10px #fff, 
               0 0 20px #fff; */
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 columns */
    gap: 2rem; /* space between cards */
    padding: 2rem;
    justify-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    border-radius: 0;
    overflow: hidden;
    box-shadow: none;
    transition: transform 0.2s ease;
    background: rgb(195, 245, 95);
    width: 100%;
    max-width: 300px;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .image-link {
    display: block;
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .card img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    cursor: pointer;
    display: block;
    transition: transform 0.3s ease;
  }

  .image-link:hover img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1rem;
  }

  .card-content h2 {
    font-family: 'League Script Two', sans-serif;
    color: black;
    font-size: 1.8rem;
    margin: 0 0 0.5rem;
    line-height: 1.2;
  }

  .card-content p {
    font-family: 'League Script Two', sans-serif;
    font-size: 0.9rem;
    color: #666;
    margin: 0.2rem 0;
  }

  .date {
    font-size: 0.8rem !important;
    color: #888 !important;
  }

  .description {
    font-size: 1rem !important;
    color: #555 !important;
    line-height: 1.3;
    margin-top: 0.5rem !important;
  }

  /* Tablet Styles */
  @media (max-width: 1024px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
      padding: 1.5rem;
    }

    .pink-text {
      font-size: 6rem;
      text-align: center;
    }

    .card {
      max-width: 350px;
    }

    .card img {
      height: 350px;
    }
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .grid {
      grid-template-columns: 1fr; /* Single column on mobile */
      gap: 1.5rem;
      padding: 1rem;
    }

    .pink-text {
      font-size: 4rem;
      text-align: center;
      padding: 0 1rem;
      margin-bottom: 2rem;
    }

    .card {
      max-width: 100%;
      width: 100%;
      margin: 0 auto;
    }

    .card img {
      height: 300px; /* Shorter height on mobile to prevent squishing */
      object-fit: cover;
    }

    .card-content {
      padding: 1.2rem;
    }

    .card-content h2 {
      font-size: 1.6rem;
    }

    .card-content p {
      font-size: 0.95rem;
    }

    .description {
      font-size: 1.05rem !important;
    }
  }

  /* Small Mobile Styles */
  @media (max-width: 480px) {
    .grid {
      padding: 0.5rem;
      gap: 1rem;
    }

    .pink-text {
      font-size: 3rem;
      margin-bottom: 1.5rem;
    }

    .card img {
      height: 250px; /* Even shorter on very small screens */
    }

    .card-content {
      padding: 1rem;
    }

    .card-content h2 {
      font-size: 1.4rem;
    }

    .card-content p {
      font-size: 0.9rem;
    }

    .description {
      font-size: 1rem !important;
    }
  }

  /* Landscape phone orientation */
  @media (max-width: 896px) and (orientation: landscape) {
    .pink-text {
      font-size: 3.5rem;
      margin-bottom: 1rem;
    }

    .card img {
      height: 200px; /* Much shorter in landscape to fit screen */
    }

    .grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
</style>