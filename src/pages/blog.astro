---
import { getCollection } from 'astro:content';
import Layout from '../layouts/ShopLayout.astro';
import LoopMoving from '../components/LoopMoving.astro';

// get posts
const posts = await getCollection('posts');

// sort newest first
posts.sort((a, b) => new Date(b.data.date) - new Date(a.data.date));
---

<Layout>
  <!-- LoopMoving at top -->
  <h1 class="pink-text">My blog ...</h1>

  <!-- Posts Grid -->
  <section class="grid">
    {posts.map((post) => (
      <div class="card">
        <!-- only the image is clickable -->
        <a href={`/posts/${post.slug}/`}>
          <img src={post.data.coverImage} alt={post.data.title} />
        </a>

        <!-- text section below -->
        <div class="card-content">
          <h2>{post.data.title}</h2>
          <p><em>{post.data.date}</em></p>
          {post.data.description && <p>{post.data.description}</p>}
        </div>
      </div>
    ))}
  </section>
</Layout>

<style>
  .white-bg-container {
    width: 100vw;
    height: 150px;
    background-color: #ff66cccf;
    display: flex;
    align-items: center;
    justify-content: center; /* center horizontally */
    overflow: visible;
    padding: 0 1rem;
    margin-bottom: 2rem;
  }

  .moving-text-wrapper {
    position: relative;
    max-width: 1300px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 columns */
    gap: 2rem; /* space between cards */
    padding: 2rem;
    justify-items: center;
  }

  .card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    border-radius: 0;
    overflow: hidden;
    box-shadow: none;
    transition: transform 0.2s ease;
    background: rgb(195, 245, 95);
    width: 100%;
    max-width: 300px;
  }

  .card img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    cursor: pointer;
    position: relative;
    display: block;
  }

  .card img::after {
    content: "";
    position: absolute;
    top: 0; left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.2);
    pointer-events: none;
  }

  .card-content {
    padding: 1rem;
  }

  .card-content h2 {
    font-family: 'League Script Two', sans-serif;
    color: black;
    font-size: 1.8rem;
    margin: 0 0 0.5rem;
  }

  .card-content p {
    font-family: 'League Script Two', sans-serif;
    font-size: 0.9rem;
    color: #666;
    margin: 0.2rem 0;
  }
  .pink-text {
    color: #ff66cc;
    font-size: 8rem;
    text-align: left;
    margin-bottom: 1rem;

    /* text-shadow: 0 0 5px #fff, 
               0 0 10px #fff, 
               0 0 20px #fff; */
  }
</style>
