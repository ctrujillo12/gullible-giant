---
import Layout from '../layouts/ShopLayout.astro';
---

<style>
  body {
    background-color: rgb(195, 245, 95);
    background-size: 80px, 60px, 60px;
    background-position: top left, center, bottom right;
  }

  .connect-container {
    text-align: center;
    margin-top: 1rem;
    color: #b623ff;
    position: relative;
    font-family: 'League Script', cursive;
  }

  .idea-text {
    font-family: 'League Script Two', sans-serif;
    color: #ffffff;
    font-size: 2rem;
    margin-bottom: 3rem;
  }

  .fade-slide-up {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .fade-slide-up.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .connect-container h1,
  .modal-content h2 {
    font-size: 3rem;
    color: rgb(182, 35, 255);
    line-height: 0.8;
    font-family: 'League Script', cursive;
    margin-bottom: 2rem;
  }

  .connect-button,
  .social-links a {
    font-family: 'League Script', cursive;
    color: rgb(182, 35, 255);
  }

  .connect-button {
    background-color: #111;
    color: white;
    border: none;
    padding: 0.8rem 1.5rem;
    font-family: 'League Script', cursive;
    font-size: 2rem;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-bottom: 2rem;
  }

  .connect-button:hover {
    background-color: #282828;
    color: white;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  .social-links a {
    display: inline-block;
    width: 32px;
    height: 32px;
  }

  .social-links img.social-icon {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 0 2px #2eddddff);
    transition: transform 0.2s ease;
  }

  .social-links a:hover img.social-icon {
    transform: scale(1.2);
  }

  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0; top: 0;
    width: 100%; height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    justify-content: center;
    align-items: center;
  }

  .modal-content {
    background-color: white;
    padding: 2rem;
    border-radius: 10px;
    max-width: 500px;
    width: 90%;
    text-align: left;
    box-shadow: 0 0 10px rgba(255, 102, 204, 0.2);
    font-family: 'League Script', cursive;
    color: rgb(182, 35, 255);
  }

  .modal-content h2 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .modal-content label {
    display: block;
    margin-top: 1rem;
    font-weight: bold;
    font-size: 1.3rem;
  }

  .modal-content input,
  .modal-content textarea {
    width: 100%;
    padding: 0.5rem;
    margin-top: 0.3rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 1.2rem;
    font-family: 'League Script', cursive;
    color: rgb(182, 35, 255);
  }

  .modal-content textarea {
    height: 100px;
  }

  .modal-close {
    background-color: rgb(182, 35, 255);
    border: none;
    padding: 1rem 1rem;
    border-radius: 6px;
    margin-top: 1rem;
    cursor: pointer;
    color: white;
    font-weight: bold;
    font-family: 'League Script', cursive;
    font-size: 1rem;
  }

  .modal-show {
    display: flex;
  }
</style>

<Layout title="Let's Connect">
  <div class="connect-container">
    <img src="/images/envelope.png" alt="Envelope Icon" style="max-width: 400px; margin-bottom: 1rem;" />
    <!-- <p class="fade-slide-up idea-text">Have an idea? Something to say? My inbox is open.</p> -->
    <button class="connect-button fade-slide-up" id="openModal">Send a Message</button>

    <div class="social-links">
      <a href="https://www.linkedin.com/in/cheyenne-trujillo-093a41246" target="_blank" aria-label="LinkedIn">
        <img src="/images/linkedin.svg" alt="LinkedIn" class="social-icon" />
      </a>
      <a href="https://github.com/ctrujillo12" target="_blank" aria-label="GitHub">
        <img src="/images/github.png" alt="GitHub" class="social-icon" />
      </a>
      <a href="https://www.instagram.com/cheyenneetrujillo/" target="_blank" aria-label="Instagram">
        <img src="/images/instagram.png" alt="Instagram" class="social-icon" />
      </a>
      <a href="mailto:cheyenneettrujillo@gmail.com" aria-label="Email">
        <img src="/images/gmail.jpg" alt="Email" class="social-icon" />
      </a>
      <a href="https://open.spotify.com/user/6f8wd68ntevknv4h1fx17lky5" target="_blank" aria-label="Spotify">
        <img src="/images/spowebp.webp" alt="Spotify" class="social-icon" />
      </a>
    </div>
  </div>

  <div class="modal" id="contactModal">
    <div class="modal-content">
      <h2>Send a Message</h2>
      <form>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" />

        <label for="email">Email/Handle</label>
        <input type="email" id="email" name="email" />

        <label for="message">Content</label>
        <textarea id="message" name="message"></textarea>

        <button class="modal-close" type="submit">Send</button>
      </form>
    </div>
  </div>

  <script>
    window.addEventListener('DOMContentLoaded', () => {
      const modal = document.getElementById('contactModal');
      const openBtn = document.getElementById('openModal');

      if (modal && openBtn) {
        openBtn.addEventListener('click', () => {
          modal.classList.add('modal-show');
        });

        modal.addEventListener('click', (e) => {
          if (e.target === modal) {
            modal.classList.remove('modal-show');
          }
        });
      }

      const animatedElements = document.querySelectorAll('.fade-slide-up');

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });

      animatedElements.forEach(el => observer.observe(el));
    });
  </script>
</Layout>
