---
import Layout from '../layouts/ShopLayout.astro';
---

<style>
  body {
    background-color: rgb(195, 245, 95);
    /* background-image: url('/images/yellowstar.png'), url('/images/star-fileed.webp'), url('/images/hearts.png'); */
    /* background-repeat: repeat; */
    background-size: 80px, 60px, 60px;
    background-position: top left, center, bottom right;
  }

  .connect-container {
    text-align: center;
    margin-top: 5rem;
    color: #ff66cc;
    position: relative;
  }

  /* Headers: Graduate font, pink */
  .connect-container h1,
  .modal-content h2 {
    font-size: 3rem;
    color: #ff66cc;
    font-family: 'Graduate', cursive;
    margin-bottom: 1rem;
  }

  /* Smaller text: League Script font, pink */
  .connect-container p,
  .connect-button,
  .social-links a,
  .modal-content label,
  .modal-content input,
  .modal-content textarea {
    font-family: 'League Script', cursive;
    color: #ff66cc;
  }

  .connect-container p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  .connect-button {
    background-color: #111;
    color: white;
    border: none;
    padding: 0.8rem 1.5rem;
    font-size: 1.7rem;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-bottom: 2rem;
  }

  .connect-button:hover {
    background-color: #ff66cc;
    color: white;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  /* Social icons styling */
  .social-links a {
    display: inline-block;
    width: 32px;
    height: 32px;
  }

  .social-links img.social-icon {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 0 2px #ff66cc);
    transition: transform 0.2s ease;
  }

  .social-links a:hover img.social-icon {
    transform: scale(1.2);
  }

  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0; top: 0;
    width: 100%; height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    justify-content: center;
    align-items: center;
  }

  .modal-content {
    background-color: white;
    padding: 2rem;
    border-radius: 10px;
    max-width: 500px;
    width: 90%;
    text-align: left;
    box-shadow: 0 0 10px rgba(255, 102, 204, 0.2);
  }

  .modal-content label {
    display: block;
    margin-top: 1rem;
    font-weight: bold;
  }

  .modal-content input,
  .modal-content textarea {
    width: 100%;
    padding: 0.5rem;
    margin-top: 0.3rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 1rem;
  }

  .modal-content textarea {
    height: 100px;
  }

  .modal-close {
    background-color: #ff66cc;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    margin-top: 1rem;
    cursor: pointer;
    color: white;
    font-weight: bold;
  }

  .modal-show {
    display: flex;
  }
</style>

<Layout title="Let's Connect">
  <div class="connect-container">
    <h1>ðŸ’Œ Letâ€™s Connect</h1>
    <!-- <p>Have suggestions, comments, or just want to say hi?</p> -->
    <button class="connect-button" id="openModal">Send a Message</button>

    <div class="social-links">
      <!-- <a href="https://www.pinterest.com/yourprofile" target="_blank" aria-label="Pinterest">
        <img src="/images/pinterest.svg" alt="Pinterest" class="social-icon" />
      </a> -->
      <a href="https://www.linkedin.com/in/cheyenne-trujillo-093a41246" target="_blank" aria-label="LinkedIn">
        <img src="/images/linkedin.svg" alt="LinkedIn" class="social-icon" />
      </a>
      <a href="https://github.com/ctrujillo12" target="_blank" aria-label="GitHub">
        <img src="/images/github.png" alt="GitHub" class="social-icon" />
      </a>
      <a href="https://www.instagram.com/cheyenneetrujillo/" target="_blank" aria-label="Instagram">
        <img src="/images/instagram.png" alt="Instagram" class="social-icon" />
      </a>
      <a href="mailto:cheyenneettrujillo@gmail.com" aria-label="Email">
        <img src="/images/gmail.jpg" alt="Email" class="social-icon" />
      </a>
    </div>
  </div>

  <div class="modal" id="contactModal">
    <div class="modal-content">
      <h2>Send a Message</h2>
      <form>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" />

        <label for="email">Email/Handle</label>
        <input type="email" id="email" name="email" />

        <!-- <label for="topic">Topic</label>
        <input type="text" id="topic" name="topic" /> -->

        <label for="message">Content</label>
        <textarea id="message" name="message"></textarea>

        <button class="modal-close" type="submit">Send</button>
      </form>
    </div>
  </div>

  <script>
    const modal = document.getElementById('contactModal');
    const openBtn = document.getElementById('openModal');

    openBtn.addEventListener('click', () => {
      modal.classList.add('modal-show');
    });

    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.classList.remove('modal-show');
      }
    });
  </script>
</Layout>
