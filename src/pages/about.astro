---
import Layout from '../layouts/ShopLayout.astro';
---

<style>
  body {
    background-color: rgb(195, 245, 95);
    background-size: 80px, 60px, 60px;
    background-position: top left, center, bottom right;
  }

  .connect-container {
    text-align: center;
    margin-top: 1rem;
    color: #ff66cc;
    position: relative;
  }

  /* "Connect with me!" in Graduate font */
  .connect-container h3 {
    font-family: 'Graduate', cursive;
    font-size: 1rem;
    color: #ff66cc;
    margin-bottom: 2rem;
  }

  .idea-text {
    font-family: 'League Script Two', sans-serif;
    color: #ffffff;
    font-size: 2rem;
    margin-bottom: 3rem;
  }

  .fade-slide-up {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .fade-slide-up.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .connect-row {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .envelope-img {
    max-width: 300px;
    height: auto;
    cursor: pointer;
  }

  /* Social links in League Script cursive */
  .social-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  .social-links a {
    font-family: 'League Script', cursive;
    font-weight: bold;
    font-size: 1.4rem;
    color: black;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .social-links a:hover {
    color: rgb(182, 35, 255);
  }

  .modal {
    display: none;
    position: fixed;
    z-index: 890;
    left: 0;
    top: 0;
    width: 80%;
    height: 80%;
    background-color: rgba(0, 0, 0, 0.6);
    justify-content: center;
    align-items: center;
  }

  .modal-content {
    background-color: white;
    padding: 2rem;
    border-radius: 10px;
    max-width: 500px;
    width: 90%;
    text-align: left;
    box-shadow: 0 0 10px rgba(255, 102, 204, 0.2);
    font-family: 'League Script', cursive;
    color: rgb(182, 35, 255);
  }

  .modal-content h2 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .modal-content label {
    display: block;
    margin-top: 1rem;
    font-weight: bold;
    font-size: 1.3rem;
  }

  .modal-content input,
  .modal-content textarea {
    width: 100%;
    padding: 0.5rem;
    margin-top: 0.3rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 1.2rem;
    font-family: 'League Script', cursive;
    color: rgb(182, 35, 255);
  }

  .modal-content textarea {
    height: 100px;
  }

  .modal-close {
    background-color: rgb(182, 35, 255);
    border: none;
    padding: 1rem 1rem;
    border-radius: 6px;
    margin-top: 1rem;
    cursor: pointer;
    color: white;
    font-weight: bold;
    font-family: 'League Script', cursive;
    font-size: 1rem;
  }

  .modal-show {
    display: flex;
  }
</style>

<Layout title="Let's Connect">
  <div class="connect-container">
    <h3>Connect with me!</h3>
    <div class="connect-row fade-slide-up">
      <img src="/images/envelope.png" alt="Envelope Icon" class="envelope-img" id="openModal" />
    </div>

    <div class="social-links">
      <a href="https://github.com/ctrujillo12" target="_blank">GitHub</a>
      <a href="https://www.instagram.com/cheyenneetrujillo/" target="_blank">Instagram</a>
      <a href="https://www.linkedin.com/in/cheyenne-trujillo-093a41246" target="_blank">LinkedIn</a>
      <a href="mailto:cheyenneettrujillo@gmail.com">Email</a>
    </div>
  </div>

  <div class="modal" id="contactModal">
    <div class="modal-content">
      <h2>Send a Message</h2>
      <form>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" />

        <label for="email">Email/Handle</label>
        <input type="email" id="email" name="email" />

        <label for="message">Content</label>
        <textarea id="message" name="message"></textarea>

        <button class="modal-close" type="submit">Send</button>
      </form>
    </div>
  </div>

  <script>
    window.addEventListener('DOMContentLoaded', () => {
      const modal = document.getElementById('contactModal');
      const openBtn = document.getElementById('openModal');

      if (modal && openBtn) {
        openBtn.addEventListener('click', () => {
          modal.classList.add('modal-show');
        });

        modal.addEventListener('click', (e) => {
          if (e.target === modal) {
            modal.classList.remove('modal-show');
          }
        });
      }

      const animatedElements = document.querySelectorAll('.fade-slide-up');

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });

      animatedElements.forEach(el => observer.observe(el));
    });
  </script>
</Layout>
