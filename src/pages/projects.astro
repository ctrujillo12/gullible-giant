---
import Layout from '../layouts/ShopLayout.astro';
import LoopMoving from '../components/LoopMoving.astro';
---


<Layout title="Home"></Layout>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Ballet:opsz@16..72&family=League+Script&display=swap"
      rel="stylesheet"
    />
  </head>

  <div class="hero">
    <div class="overlay"></div>
    <LoopMoving text="My Picks" fontSize="13rem" />
  </div>

  <div class="content-section">
    <div class="content-text">
      <h2>Secondhand Picks</h2>
      <p>A collection of my favorite vintage and thrifted gems. Fashion with a story.</p>
      <a href="/secondhand" class="link-button">Explore Finds</a>
    </div>
    <div class="content-image">
      <img src="/images/secondhand.jpg" alt="Secondhand Finds" />
    </div>
  </div>

  <div class="content-section">
    <div class="content-text">
      <h2>Diary</h2>
      <p>Personal reflections, observations, and thoughts from my life and mind.</p>
      <a href="/diary" class="link-button">Read Entries</a>
    </div>
    <div class="content-image">
      <img src="/images/diary.jpg" alt="Diary Entries" />
    </div>
  </div>

  <div class="content-section">
    <div class="content-text">
      <h2>My Music</h2>
      <p>Snippets, covers, and compositions—from violin to piano to experimental loops.</p>
      <a href="/music" class="link-button">Listen In</a>
    </div>
    <div class="content-image">
      <img src="/images/music.jpg" alt="Music" />
    </div>
  </div>

  <div class="content-section">
    <div class="content-text">
      <h2>Projects & Inspo</h2>
      <p>Things I’ve built, things I love, and the ideas that spark something in me.</p>
      <a href="/projects" class="link-button">See More</a>
    </div>
    <div class="content-image">
      <img src="/images/projects.jpg" alt="Projects and Inspirations" />
    </div>
  </div>

  <script>
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      },
      {
        threshold: 0.1,
      }
    );

    document.querySelectorAll('.content-section').forEach((section) => {
      observer.observe(section);
    });
  </script>
</Layout>

<style>
  .hero {
    position: relative;
    height: 70vh;
    background-image: url('/images/tractor.jpg');
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.7);
  }

  .hero h1 {
    font-size: 4rem;
    text-align: center;
    z-index: 1;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 0;
  }

  .content-section {
    max-width: 900px;
    margin: 4rem auto;
    display: flex;
    align-items: center;
    gap: 2rem;
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 1s ease-out, transform 1s ease-out;
  }

  .content-section.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Odd sections: text left, image right */
  .content-section:nth-of-type(odd) {
    flex-direction: row;
  }

  /* Even sections: image left, text right */
  .content-section:nth-of-type(even) {
    flex-direction: row-reverse;
  }

  .content-text {
    flex: 1;
    color:rgba(188, 255, 112, 0.4)
  }

  .content-text h2 {
    margin-bottom: 1rem;
  }

  .content-text p {
    font-size: 1.1rem;
    line-height: 1.5;
    color:rgba(188, 255, 112, 0.4)
  }

  .content-image {
    flex: 1;
  }

  .content-image img {
    width: 100%;
    border-radius: 8px;
  }

  /* Responsive: stack vertically on small screens */
  @media (max-width: 768px) {
    .content-section {
      flex-direction: column !important;
      text-align: center;
    }

    .content-text, .content-image {
      width: 100%;
    }
  }

  .link-button {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background-color: #111;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    transition: background-color 0.3s;
  }

  .link-button:hover {
    background-color: #333;
  }
</style>
