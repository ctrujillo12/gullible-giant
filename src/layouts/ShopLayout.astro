---
const { title = "Shop" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Glider.js -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.css" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=League+Script&display=swap" rel="stylesheet" />

    <style>
      body {
        font-family: 'League Script', serif;
        background: rgb(33, 33, 33);
        color: #f0f0f0;
        margin: 0;
        padding: 0;
      }

      header {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid #555;
      }

      nav {
        display: flex;
        gap: 2rem;
        font-weight: bold;
        flex-wrap: wrap;
      }

      nav a {
        font-size: 1.1rem;
        color: #c7ff7a;
        text-decoration: none;
      }

      footer {
        text-align: center;
        padding: 2rem 0;
        border-top: 1px solid #555;
        font-size: 0.9rem;
        color: #999;
      }

      main {
        padding: 2rem 1rem;
        max-width: 1200px;
        margin: 0 auto;
      }
    </style>

    <slot name="head" />
  </head>

  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Blog</a>
        <a href="/projects">Projects</a>
        <a href="/mypicks">Picks</a>
        <a href="/diary">Diary</a>
        <a href="/spotify">Spotifyyy</a>
        <a href="/about">About</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      © {new Date().getFullYear()} cheyenneettrujillo — made with ☕ + Astro
    </footer>
  </body>
</html>
