---
const { title = "Shop" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    

    <!-- Glider.js -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.css" />

    <!-- Google Fonts -->
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Ballet:opsz@16..72&family=League+Script&family=Graduate&display=swap" rel="stylesheet" />
  
    />

    <style>
      body {
        font-family: 'League Script', serif;
        background: rgb(195, 245, 95);
        color: #f0f0f0;
        margin: 0;
        padding: 0;
      }

      header {
        padding: 0.5rem 2rem;
        border-bottom: 1px solid #555;
      }

      nav {
        display: flex;
        justify-content: space-between; /* logo left, links right */
        align-items: center;
        font-weight: bold;
        flex-wrap: nowrap;
        gap: 2rem;
      }

      .site-logo {
        font-family: 'Roboto Slab', serif;
        font-size: 1.5rem;
        color: rgb(195, 245, 95);
        text-decoration: none;
      }

      .nav-links {
        display: flex;
        gap: 2rem;
        color: #ff66cc;
        align-items: center;
      }

      .nav-links {
        display: flex;
        flex-direction: row; /* make sure it's horizontal */
        gap: 2rem;
        color: #ff66cc;
        align-items: center;
        flex-wrap: nowrap; /* prevent stacking */
      }

      /* Unique fonts for nav links */
      .nav-links a:nth-child(1) {
        font-family: 'Graduate', cursive;
        text-decoration: none;
        color: rgb(158, 31, 222);
      }
      .nav-links a:nth-child(2) {
        font-family: 'Graduate', cursive;
        text-decoration: none;
        color: rgb(158, 31, 222);
      }
      .nav-links a:nth-child(3) {
        font-family: 'Graduate', cursive;
        text-decoration: none;
        color: rgb(158, 31, 222);
      }
      .nav-links a:nth-child(4) {
        font-family: 'Graduate', cursive;
        text-decoration: none;
        color: rgb(158, 31, 222);
      }

      /* Spotify icon styling */
      .nav-links a.spotify-link img {
        width: 27px;
        height: 27px;
        /* filter: brightness(0) saturate(100%) invert(81%) sepia(40%) saturate(682%)
          hue-rotate(70deg) brightness(93%) contrast(92%); */
      }

      footer {
        text-align: center;
        padding: 2rem 0;
        border-top: 1px solid #555;
        font-size: 0.9rem;
        color: rgb(158, 31, 222);
        font-family: 'Graduate', serif;
      }

      main {
        padding: 2rem 1rem;
        max-width: 1200px;
        margin: 0 auto;
      }
    </style>

    <slot name="head" />
  </head>

  <body>
    <header>
      <nav>
        <!-- <a href="/" class="site-logo">C</a> -->
       <a href="/" class="site-logo" aria-label="horse" style="position: relative; width: 80px; height: 80px; display: inline-block;">
        <img src="/images/whorse.png" alt="Home" style="
          width: 40px;
          height: 40px;
          filter: drop-shadow(0 0 0 rgb(158, 31, 222)) drop-shadow(0 0 2px rgb(158, 31, 222));
          display: block;
          margin: 20px auto;
        " />

        <svg viewBox="0 0 100 100" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none;">
          <defs>
            <path id="circlePath" d="M 50, 50 m -40, 0 a 40,40 0 1,1 80,0 a 40,40 0 1,1 -80,0" />
          </defs>
          <text fill="#b623ff" font-family="Graduate, serif" font-size="10" letter-spacing="2">

            <textPath xlink:href="#circlePath" startOffset="25%">
              • H O M E • 
            </textPath>
          </text>
        </svg>
      </a>



        <div class="nav-links">
          <!-- <a href="/">Home</a> -->
          <!-- <a href="/projects">Projects</a> -->
          <!-- <a href="/mypicks">My Picks</a> -->
          <a href="/test">My Picks</a>
          <!-- <a href="/projects">Projects</a> -->
          <!-- <a href="/diary">Diary</a> -->
          <a href="/spotify">Music</a>
          <!-- </a>class="spotify-link" aria-label="Spotify">
            <img src="/images/spotify--v2.png" alt="Spotify" />
          </a> -->
          <a href="/about">About</a>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="footer"></div>
        © {new Date().getFullYear()} made with astro 
      </div>
    </footer>
  </body>
</html>