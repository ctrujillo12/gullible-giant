---
const { title = "Shop" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Glider.js -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.css" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=League+Script&family=Montserrat&family=Pacifico&family=Roboto+Slab&family=Raleway&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: 'League Script', serif;
        background: rgb(82, 82, 82);
        color: #f0f0f0;
        margin: 0;
        padding: 0;
      }

      header {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid #555;
      }

      nav {
        display: flex;
        justify-content: space-between; /* logo left, links right */
        align-items: center;
        font-weight: bold;
        flex-wrap: nowrap;
        gap: 2rem;
      }

      .site-logo {
        font-family: 'Roboto Slab', serif;
        font-size: 1.5rem;
        color: #c7ff7a;
        text-decoration: none;
      }

      .nav-links {
        display: flex;
        gap: 2rem;
        align-items: center;
      }

      .nav-links {
        display: flex;
        flex-direction: row; /* make sure it's horizontal */
        gap: 2rem;
        align-items: center;
        flex-wrap: nowrap; /* prevent stacking */
      }

      /* Unique fonts for nav links */
      .nav-links a:nth-child(1) {
        font-family: 'League Script', cursive;
      }
      .nav-links a:nth-child(2) {
        font-family: 'Montserrat', sans-serif;
      }
      .nav-links a:nth-child(3) {
        font-family: 'Pacifico', cursive;
      }
      .nav-links a:nth-child(5) {
        font-family: 'Raleway', sans-serif;
      }

      /* Spotify icon styling */
      .nav-links a.spotify-link img {
        width: 24px;
        height: 24px;
        /* filter: brightness(0) saturate(100%) invert(81%) sepia(40%) saturate(682%)
          hue-rotate(70deg) brightness(93%) contrast(92%); */
      }

      footer {
        text-align: center;
        padding: 2rem 0;
        border-top: 1px solid #555;
        font-size: 0.9rem;
        color: #c7ff7a;
      }

      main {
        padding: 2rem 1rem;
        max-width: 1200px;
        margin: 0 auto;
      }
    </style>

    <slot name="head" />
  </head>

  <body>
    <header>
      <nav>
        <!-- <a href="/" class="site-logo">C</a> -->
       <a href="/" class="site-logo" aria-label="horse" style="width: 50px; height: 50px; display: inline-block;">
        <img src="/images/whorse.png" alt="Home" style="
          width: 40px;
          height: 40px;
          filter: drop-shadow(0 0 0 rgb(182, 35, 255)) drop-shadow(0 0 2px rgb(182, 35, 255));
        " />
      </a>


        <div class="nav-links">
          <!-- <a href="/">Home</a> -->
          <!-- <a href="/projects">Projects</a> -->
          <a href="/mypicks">Picks</a>
          <a href="/diary">Diary</a>
          <a href="/spotify" class="spotify-link" aria-label="Spotify">
            <img src="/images/nn.jpg" alt="Spotify" />
          </a>
          <a href="/about">Connect</a>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      © {new Date().getFullYear()} cheyenneettrujillo — made with ☕ + Astro
    </footer>
  </body>
</html>
