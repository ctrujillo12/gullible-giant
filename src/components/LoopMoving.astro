---
const {
  text = "This text loops infinitely",
  speed = 70,
  color = "#000000", // default color
  fontSize = "1rem"
} = Astro.props;
---

<style>
  @import url('https://fonts.googleapis.com/css2?family=Ballet:opsz@16..72&display=swap');

  .scroll-container {
    overflow: hidden;
    white-space: nowrap;
    width: 100vw;
    position: relative;
  }

  .scroll-text {
    display: inline-block;
    animation: scrollLoop linear infinite;
    font-family: 'Ballet', cursive;
    white-space: nowrap;
    color: inherit; /* inherit color from style prop */
  }

  @keyframes scrollLoop {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-45%);
    }
  }
</style>

<div
  class="scroll-container"
>
  <div
    class="scroll-text"
    style={`animation-duration: ${speed}s; font-size: ${fontSize}; color: ${color}; font-variation-settings: 'opsz' 72;`}
  >
    {text} {text} {text} {text} {text} {text} {text} {text}
  </div>
</div>
